generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          String    @default("USER") // USER or SUPERADMIN
  plan          String    @default("FREE") // FREE or DEEP
  planExpiresAt DateTime? // When the paid plan expires (null for FREE plan)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  dreams        Dream[]
}

model Dream {
  id        String   @id @default(cuid())
  content   String
  type      String   @default("dream")
  date      String
  tags      String   @default("[]")
  analysis  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([date])
}
